= simple_form_for @item do |f|
  -#- if @item.errors.any?
    -##error_explanation
      -#%h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      -#%ul
        -#- @item.errors.full_messages.each do |msg|
          -#%li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :date1
    = f.date_select :date1
  .field
    = f.label :date2
    = f.date_select :date2
  .field
    = f.label :desc
    = f.text_field :desc
  .actions
    = f.submit 'Save'
