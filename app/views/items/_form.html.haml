= simple_form_for @item do |f|
  = f.input :title, :label => '*Item Title'
  = f.input :region, :collection => ['AUS','IND'], :include_blank => false
  = f.input :price
  = f.input :date1, :start_year => 2000, :default => { :year => 2005 }, :include_blank => false 
  = f.input :date2, :start_year => 2000, :default => { :year => 2005 }, :include_blank => false
  = f.input :desc, :label => '*Description', :as => :text
  = submit_tag 'Save'
